<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8"/>
        <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        <title>Document</title>
        <link rel="stylesheet" href="/css/quan-ly-phim.css"/>
    </head>
    <style>

      h1 {
        margin-bottom: 20px;
        text-align: center;
      }

      form {
        width: 50%;
        margin: auto;
      }

      label {
        display: block;
        margin-bottom: 5px;
      }

      input[type="text"],
      input[type="number"],
      select,
      textarea {
        width: 100%;
        padding: 10px;
        margin-bottom: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        font-size: 14px;
      }

      select[multiple] {
        height: auto;
      }

      button[type="submit"] {
        padding: 10px 20px;
        background-color: #4caf50;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 16px;
      }
    </style>
    <body>
      <%- include('./partials/sidebar') %>
        <div class="main-content">
            <div class="quantity-report">
                <div class="quantity-rpBlock">
                    <h2>800</h2>
                    <p>Tổng số phim</p>
                </div>
                <div class="quantity-rpBlock">
                    <h2>350</h2>
                    <p>Phim mới cập nhật</p>
                </div>
                <div class="quantity-rpBlock">
                    <h2>1.500.000</h2>
                    <p>Lượt xem phim trong tháng</p>
                </div>
            </div>
            <div class="container">
                <h2>Quản lý phim</h2>

                <div class="search-bar">
                    <input type="text" placeholder="Tìm kiếm phim...">
                    <button>Tìm kiếm</button>
                </div>

                <table>
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Tên phim</th>
                            <th>Hình ảnh</th>
                            <th>Số tập</th>
                            <th>Thể loại</th>
                            <th>Điểm xếp hạng</th>
                            <th>Lượt xem</th>
                            <th>Ngày phát hành</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                      <% movies.forEach(function(movie, index) { %>
                        <tr>
                          <td><%= index + 1 %></td>
                          <td><%= movie.name %></td>
                          <td><img src="<%= movie.img1Url %>" alt="Phim A" class="film-image"/></td>
                          <td><%= movie.totalEpisodes %></td>
                          <td><%= movie.genreIds %></td>
                          <td><%= movie.score %></td>
                          <td><%= movie.view %></td>
                          <td><%= movie.yearManufacture %></td>
                          <td class="actions">
                            <button>Sửa</button>
                            <button>Xóa</button>
                          </td>
                        </tr>
                      <% }); %>
                      
                    </tbody>
                </table>

                <h1>Create Movie</h1>

    <form action="./movies/create" method="POST">
      <label for="name">Name:</label>
      <input type="text" id="name" name="name" required />

      <label for="totalEpisodes">Total Episodes:</label>
      <input type="number" id="totalEpisodes" name="totalEpisodes" required />

      <label for="areaId">Area:</label>
      <select id="areaId" name="areaId" required>
        <% for (const area of areas) { %>
        <option value="<%= area.id %>"><%= area.name %></option>
        <% } %>
      </select>

      <label for="genreIds">Genres:</label>
      <select id="genreIds" name="genreIds" multiple required>
        <% for (const genre of genres) { %>
        <option value="<%= genre.id %>"><%= genre.name %></option>
        <% } %>
      </select>

      <label for="rating">Rating:</label>
      <input type="number" id="rating" name="rating" required />

      <label for="score">Score:</label>
      <input type="number" id="score" name="score" step="0.1" required />

      <label for="numberReviews">Number of Reviews:</label>
      <input type="number" id="numberReviews" name="numberReviews" required />

      <label for="view">Views:</label>
      <input type="number" id="view" name="view" required />

      <label for="classification">Classification:</label>
      <input type="text" id="classification" name="classification" required />

      <label for="yearManufacture">Year of Manufacture:</label>
      <input
        type="number"
        id="yearManufacture"
        name="yearManufacture"
        required
      />

      <label for="director">Director:</label>
      <input type="text" id="director" name="director" required />

      <label for="performer">Performers:</label>
      <input type="text" id="performer" name="performer" required />

      <label for="describe">Description:</label>
      <textarea id="describe" name="describe" required></textarea>

      <label for="producer">Producer:</label>
      <input type="text" id="producer" name="producer" required />
      <button type="submit">Create</button>
    </form>
            </div>
        </div>

    </body>
</html></body></html>
