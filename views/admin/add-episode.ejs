<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <title>Movie Table</title>
</head>
<style>
    .sidebar {
      background-color: #212529;
      color: #fff;
      padding-top: 20px;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }

    .sidebar .nav-link {
      color: #fff;
      padding: 12px 20px;
      margin-bottom: 10px;
      transition: background-color 0.3s ease;
      border-radius: 5px;
    }

    .sidebar .nav-link:hover {
      background-color: #343a40;
    }

    .sidebar .nav-link.active {
      background-color: #343a40;
      font-weight: bold;
    }
  </style>

<body>

  <div class="container-fluid">
    <div class="row">
      <%- include('./partials/sidebar') %>


      <main role="main" class="col-md-10 ml-sm-auto px-4">
        <h1 style="padding-top: 30px;">Thêm tập phim</h1>
        <div style="margin-top: 20px;" class="episode-list">
          <% if (movie && movie.episodes && movie.episodes.length > 0) { %>
            <% movie.episodes.forEach((episode) => { %>
              <div style="width: 250px; display: inline-block;" class="episode-box card mb-3">
                <img style="width: 250px; height: 150px; object-fit: cover;" src="<%= episode.img3Url %>" alt="<%= episode.name %>" class="card-img-top">
                <div class="card-body">
                  <h5 class="card-title"><%= episode.name %> - <%= movie.name %> </h5>
                  <div class="d-flex justify-content-end">
                    <a href="#" class="btn btn-danger btn-sm me-2">Xóa</a>
                    <a href="#" class="btn btn-primary btn-sm">Sửa</a>
                  </div>
                </div>
              </div>
            <% }) %>
          <% } %>
        </div>
        
    <form action="/dashboard/add-episode/<%= movieId %>" method="POST" enctype="multipart/form-data">
      <div class="mb-3">
        <label for="name" class="form-label">Episode Name:</label>
        <input type="text" class="form-control" id="name" name="name" required>
      </div>
      <div class="mb-3">
        <label for="img3Url" class="form-label">Episode Image:</label>
        <input type="file" class="form-control" id="img3Url" name="img3Url" required>
      </div>
      <div class="mb-3">
        <label for="videoUrl" class="form-label">Episode Video URL:</label>
        <input type="text" class="form-control" id="videoUrl" name="videoUrl" required>
      </div>
      <input type="submit" value="Add Episode" class="btn btn-primary">
    </form>
  </div>
      </main>
    </div>
  </div>
  <script>
    function addActorInput() {
    const performerContainer = document.getElementById('performer-container');

    const actorInput = document.createElement('div');
    actorInput.classList.add('input-group', 'mb-3', 'actor-input');

    const input = document.createElement('input');
    input.type = 'text';
    input.classList.add('form-control');
    input.name = 'performer[]';
    input.required = true;

    const button = document.createElement('button');
    button.type = 'button';
    button.classList.add('btn', 'btn-danger');
    button.textContent = 'Xóa';

    button.addEventListener('click', function() {
      removeActorInput(this);
    });

    actorInput.appendChild(input);
    actorInput.appendChild(button);
    performerContainer.appendChild(actorInput);
  }

  function removeActorInput(button) {
    const actorInput = button.parentNode;
    actorInput.remove();
  }

  const addActorBtn = document.getElementById('add-actor-btn');
  addActorBtn.addEventListener('click', addActorInput);

  </script>


<script>

  function createFormGroup(input) {
    const formGroup = document.createElement('div');
    formGroup.classList.add('mb-3');
    formGroup.appendChild(input);
    return formGroup;
  }


  function removeActorInput(button) {
    const actorInput = button.parentNode;
    actorInput.remove();
  }

  const addActorBtn1 = document.getElementById('add-actor-btn');
  addActorBtn1.addEventListener('click', addActorInput);

  function addActorInput() {
    const performerContainer = document.getElementById('performer-container');

    const actorInput = document.createElement('div');
    actorInput.classList.add('input-group', 'mb-3', 'actor-input');

    const input = document.createElement('input');
    input.type = 'text';
    input.classList.add('form-control');
    input.name = 'performer[]';
    input.required = true;

    const button = document.createElement('button');
    button.type = 'button';
    button.classList.add('btn', 'btn-danger');
    button.textContent = 'Xóa';

    button.addEventListener('click', function() {
      removeActorInput(this);
    });

    actorInput.appendChild(input);
    actorInput.appendChild(button);
    performerContainer.appendChild(actorInput);
  }
</script>


  
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
