<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Create Movie</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        padding: 20px;
      }

      h1 {
        margin-bottom: 20px;
        text-align: center;
      }

      form {
        width: 50%;
        margin: auto;
      }

      label {
        display: block;
        margin-bottom: 5px;
      }

      input[type="text"],
      input[type="number"],
      select,
      textarea {
        width: 100%;
        padding: 10px;
        margin-bottom: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        font-size: 14px;
      }

      select[multiple] {
        height: auto;
      }

      button[type="submit"] {
        padding: 10px 20px;
        background-color: #4caf50;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 16px;
      }
    </style>
  </head>
  <body>
    <h1>Create Movie</h1>

    <form action="/movies" method="POST">
      <label for="name">Name:</label>
      <input type="text" id="name" name="name" required />

      <label for="totalEpisodes">Total Episodes:</label>
      <input type="number" id="totalEpisodes" name="totalEpisodes" required />

      <label for="areaId">Area:</label>
      <select id="areaId" name="areaId" required>
        <% for (const area of areas) { %>
        <option value="<%= area.id %>"><%= area.name %></option>
        <% } %>
      </select>

      <label for="genreIds">Genres:</label>
      <select id="genreIds" name="genreIds" multiple required>
        <% for (const genre of genres) { %>
        <option value="<%= genre.id %>"><%= genre.name %></option>
        <% } %>
      </select>

      <label for="rating">Rating:</label>
      <input type="number" id="rating" name="rating" required />

      <label for="score">Score:</label>
      <input type="number" id="score" name="score" step="0.1" required />

      <label for="numberReviews">Number of Reviews:</label>
      <input type="number" id="numberReviews" name="numberReviews" required />

      <label for="view">Views:</label>
      <input type="number" id="view" name="view" required />

      <label for="classification">Classification:</label>
      <input type="text" id="classification" name="classification" required />

      <label for="yearManufacture">Year of Manufacture:</label>
      <input
        type="number"
        id="yearManufacture"
        name="yearManufacture"
        required
      />

      <label for="director">Director:</label>
      <input type="text" id="director" name="director" required />

      <label for="performer">Performers:</label>
      <input type="text" id="performer" name="performer" required />

      <label for="describe">Description:</label>
      <textarea id="describe" name="describe" required></textarea>

      <label for="producer">Producer:</label>
      <input type="text" id="producer" name="producer" required />
      <button type="submit">Create</button>
    </form>
  </body>
</html>
